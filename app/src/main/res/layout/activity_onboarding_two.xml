<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_food"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_boarding_two" />

    <ImageView
        android:id="@+id/img_dot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_food"
        app:srcCompat="@drawable/image_dot_2" />

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="324dp"
        android:layout_height="86dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sofia_pro_medium"
        android:gravity="center"
        android:text="Even to space with\nus! Together"
        android:textColor="@color/color_title1"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_dot2" />

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sofia_pro_regular"
        android:gravity="center"
        android:text="Our app can send you everywhere, even\n space. For only $2.99 per month"
        android:textColor="@color/color_title2"
        android:textSize="17sp"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title1" />

    <ImageButton
        android:id="@+id/imgButton2"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:background="@drawable/bo_tron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title2"
        app:srcCompat="@drawable/ic_arrow_forward_24" />


</androidx.constraintlayout.widget.ConstraintLayout>